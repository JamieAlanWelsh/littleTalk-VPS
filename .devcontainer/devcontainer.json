{
  "name": "littleTalk VPS",
  "dockerComposeFile": ["./docker-compose.yaml"],
  "service": "app",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "pip3 install -r requirements.txt && python manage.py migrate",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "ms-django.django",
        "ms-vscode.makefile-tools",
        "eamodio.gitlens"
      ],
      "settings": {
      }
    }
  },
  "forwardPorts": [8000, 5432, 8080],
  "portsAttributes": {
    "8000": {
      "label": "Django",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Adminer",
      "onAutoForward": "notify"
    }
  }
}
